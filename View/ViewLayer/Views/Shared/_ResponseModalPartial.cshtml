@model ResponseViewModel;

@if (Model != null)
{
    @if (Model.Success)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>@Html.Encode(Model.Name)</strong> @Html.Encode(Model.Message)
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    else
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <div class="container d-inline-flex justify-content-between p-0">
                <h6 class="mb-1 alert-heading">@Model.Name Errors:</h6>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <hr class="my-2">
            <div class="container">
                <ul>
                    @foreach (var msg in Model.Message.Split(','))
                    {
                        <li>@Html.Encode(msg)</li>
                    }
                </ul>
            </div>
        </div>
    }
}