@model ViewLayer.Models.WorkzoneViewModel

@{
    ViewData["Title"] = "UpdateWorkspace";
}

<h1>UpdateWorkspace</h1>

<h4>WorkzoneViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
    <form asp-action="Edit" asp-controller="Admin" asp-antiforgery="true">
        
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <input asp-for="Id" hidden class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input disabled asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Floor" class="control-label"></label>
                <input asp-for="Floor" class="form-control" />
                <span asp-validation-for="Floor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Workspaces" class="control-label"></label>
                <input asp-for="Workspaces" class="form-control" />
                <span asp-validation-for="Workspaces" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Floors" class="control-label"></label>
                <select asp asp-for="FloorId" class="form-control" asp-items='@new SelectList(Model.Floors, "Id", "Name")'>
                </select>
            </div>


            <div class="form-group">
                <input type="submit" asp-action="Edit" asp-controller="Workzone" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    @* <a asp-action="Index">Back to List</a>*@
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
