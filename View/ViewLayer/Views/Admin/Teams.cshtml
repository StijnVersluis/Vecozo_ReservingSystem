@model List<ViewLayer.Models.TeamViewModel>

@{
    ViewData["Title"] = "Archief Teams";
}

<h1>Archief Teams</h1>
@if (Model.Count != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Teamnaam</th>
                <th>Beheerder</th>
                <th>Gearchiveerd op</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.Encode(item.Name)</td>
                    <td>@Html.Encode(item.Owner?.Name)</td>
                    <td>
                        <b>@item.DeletedAt?.ToString()</b>
                    </td>
                </tr>
            }
        </tbody>
    </table>
} else {
    <div class="alert alert-warning">
        Er zijn geen team archieven.
    </div>
}